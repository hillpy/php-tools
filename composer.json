{
    "name": "hillpy/php-tools",
    "description": "A php tool library. 一个php工具库。",
    "keywords": ["phptools", "工具库"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "shinn_lancelot",
            "email": "lanhaichun0317@gmail.com",
            "homepage": "https://hillpy.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "php": ">=5.6",
        "phpunit/phpunit": "^5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "support": {
        "issues": "https://github.com/hillpy/php-tools/issues"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Hillpy\\PHPTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hillpy\\PHPTools\\Tests\\": "tests/"
        }
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer test",
                "composer check-style"
            ],
            "pre-push": [
                "composer test",
                "composer check-style"
            ],
            "post-merge": "composer install"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "post-update-cmd": [
            "cghooks update"
        ],
        "cghooks": "cghooks",
        "check-style": "php-cs-fixer fix --using-cache=no --diff --config=.php_cs --dry-run --ansi",
        "fix-style": "php-cs-fixer fix --using-cache=no --config=.php_cs --ansi",
        "test": [
            "phpunit tests --colors=always"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    }
}
